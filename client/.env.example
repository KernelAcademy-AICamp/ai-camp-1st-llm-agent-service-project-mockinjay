# ==================== Flask Configuration ====================

# Flask secret key for session management
FLASK_SECRET_KEY=careguide-secret-key-2024-change-me

# Flask server port
FLASK_PORT=8000

# Flask debug mode (true/false)
FLASK_DEBUG=true


# ==================== Parlant Server Configuration ====================

# Parlant server URL (e.g., http://localhost:8800)
PARLANT_SERVER=http://localhost:8800

# Parlant agent ID (optional - will auto-discover if not set)
# PARLANT_AGENT_ID=

# Parlant agent name (used for auto-discovery if PARLANT_AGENT_ID not set)
PARLANT_AGENT_NAME=CareGuide_v2

# HTTP timeout for Parlant API calls (seconds)
PARLANT_HTTP_TIMEOUT=60


# ==================== CareGuide Configuration ====================

# Default user profile (general/patient/researcher)
CARE_GUIDE_DEFAULT_PROFILE=general
